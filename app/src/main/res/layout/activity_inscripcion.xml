<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondo"
    android:orientation="vertical">
    <Button
        android:id="@+id/buttonBack2"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:text="Back"
        android:layout_gravity="top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="InscripciÃ³n"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:inputType="text"
        android:textSize="20sp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner_2"
        android:layout_marginBottom="50dp"
        android:hint="Nombre"

        />

    <EditText
        android:id="@+id/edtApellido"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:inputType="text"
        android:textSize="20sp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner_2"
        android:layout_marginBottom="50dp"
        android:hint="Apellido"

        />

    <EditText
        android:id="@+id/edtDNI"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner_2"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:hint="D.N.I."

        />

    <RadioButton
        android:id="@+id/rdbAptoFisico"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Apto Fisico"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="58dp"
        android:layout_gravity="left"/>



    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Registrar"
        android:textSize="30sp"
        android:background="#3F51B5"
        android:textColor="@color/white"/>
</LinearLayout>