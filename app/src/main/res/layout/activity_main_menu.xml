<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondo"
    android:orientation="vertical"
    android:gravity="center">


    <Button
        android:id="@+id/buttonInscribirPostulante"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner"
        android:text="Inscribir Postulante"
        android:textColor="@color/black"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/buttonEditarDatos"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="Editar Datos"
        android:textSize="25sp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/buttonPagoCuotaDiaria"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="Pago de cuota diaria"
        android:textSize="25sp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/buttonPagoCuotaMensual"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="Pago de cuota mensual"
        android:textSize="25sp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/buttonVencimientos"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:text="Vencimientos"
        android:textSize="25sp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/buttonCerrarSesion"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesion"
        android:textSize="30sp"
        android:background="#F00"
        android:textColor="@color/white"/>
</LinearLayout>