<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondo"
    android:orientation="vertical">
    <Button
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:text="Back"
        android:layout_gravity="top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Agregar Cuota"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:id="@+id/edtDni"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner_2"
        android:layout_marginBottom="50dp"
        android:hint="DNI"

        />

    <EditText
        android:id="@+id/edtMonto"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner_2"
        android:layout_marginBottom="50dp"
        android:hint="Monto"

        />

    <EditText
        android:id="@+id/edtVencimiento"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_marginBottom="75dp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner_2"
        android:inputType="date"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:hint="Vencimiento (dd-mm-aaaa)"

        />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Agregar"
        android:textSize="30sp"
        android:background="#3F51B5"
        android:textColor="@color/white"/>
</LinearLayout>