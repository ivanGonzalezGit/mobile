<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondo"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonBack5"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:text="Back"
        android:layout_gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagar cuota diaria"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginBottom="50dp"/>

        <EditText
            android:id="@+id/edtDNICuotaDiaria"
            android:layout_width="290dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:inputType="text"
            android:textSize="20sp"
            android:backgroundTint="#D9D9D9"
            android:background="@drawable/rounded_corner_2"
            android:layout_marginBottom="50dp"
            android:hint="D.N.I."

            />

        <EditText
            android:id="@+id/edtPagoCuotaDiaria"
            android:layout_width="290dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:inputType="text"
            android:textSize="20sp"
            android:backgroundTint="#D9D9D9"
            android:background="@drawable/rounded_corner_2"
            android:layout_marginBottom="50dp"
            android:hint="Precio a pagar"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonEfectivoCuotaDiaria"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/rounded_corner_2"
            android:backgroundTint="@color/black"
            android:text="Efectivo"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/buttonTarjetaCuotaDiaria"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/rounded_corner_2"
            android:backgroundTint="@color/black"
            android:text="Tarjeta"
            android:textColor="@color/white"/>


    </LinearLayout>

</LinearLayout>