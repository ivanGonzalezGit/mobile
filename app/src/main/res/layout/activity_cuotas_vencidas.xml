<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondo"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:text="Back"
        android:layout_gravity="top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:text="Vencimiento de Cuotas"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Vencimiento del dÃ­a:"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtFecha"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="text"
        android:textSize="20sp"
        android:backgroundTint="#D9D9D9"
        android:background="@drawable/rounded_corner_2"
        android:layout_marginBottom="25dp"
        android:hint="dd-mm-aaaa"

        />
    
    <ListView
        android:id="@+id/lvVencimientos"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:background="#D9D9D9"
        android:layout_marginBottom="25dp"
        />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="#2D5198"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="Buscar"
        />

</LinearLayout>